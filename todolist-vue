        <script>
            var app = new Vue({
                el: '#app',
                data: {
                    todoList: [
                        { btn: 0, title: 'plan A', note: 'note1',isDone: 'false' },
                        { btn: 0, title: 'plan B', note: 'note2',isDone: 'true' }
                    ]
                },
                methods: {
                    newBtnClick: function() {
                        newsModalApp.title = ''
                        newsModalApp.todoIndex = -1
                        $('#newsModal').modal()
                    },
                    editBtnClick: function(index) {},
                    delBtnClick: function() {
                        $('#deleteBox').modal()
                    }
                }
            })

            // news model settings
            var newsModalApp = new Vue({
                el: '#newsModal',
                data: {
                    title: '',
                    note:'',
                    todoIndex: 0
                },
                methods: {
                    okButtonClick: function() {
                        if (this.todoIndex < 0) {
                            var newTodo = {
                                title: this.title,
                                note:this.note,
                            }
                            app.todoList.push(newTodo)
                        } else {
                            app.todoList[this.todoIndex].title = this.title
                        }
                        $('#newsModal').modal('hide')
                    }
                }
            })

            // delete box settings
            var deleteBoxApp = new Vue({
                el: '#deleteBox',
                data: {},
                methods: {
                    deleteYes: function(index) {
                        app.todoList.splice(index, 1)
                        $('#deleteBox').modal(hide)
                    },
                    deleteNo: function() {
                        alert('back to the lists')
                    }
                }
            })
        </script>
        <!-- <script>
            let items = document.querySelectorAll('#item-list > li')
            items.forEach(item => {
                $(item).prop('draggable', true)
                item.addEventListener('dragstart', dragStart)
                item.addEventListener('drop', dropped)
                item.addEventListener('dragenter', cancelDefault)
                item.addEventListener('dragover', cancelDefault)
            })

            function dragStart(e) {
                var index = $(e.target).index()
                e.dataTransfer.setData('text/plain', index)
            }

            function dropped(e) {
                cancelDefault(e)

                // get new and old index
                let oldIndex = e.dataTransfer.getData('text/plain')
                let target = $(e.target)
                let newIndex = target.index()

                // remove dropped items at old place
                let dropped = $(this)
                    .parent()
                    .children()
                    .eq(oldIndex)
                    .remove()

                // insert the dropped items at new place
                if (newIndex < oldIndex) {
                    target.before(dropped)
                } else {
                    target.after(dropped)
                }
            }

            function cancelDefault(e) {
                e.preventDefault()
                e.stopPropagation()
                return false
            }
        </script> -->
